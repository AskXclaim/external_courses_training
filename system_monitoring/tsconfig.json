{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "ES6"
    ],
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "/dist",
    "rootDir": "/src",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}
